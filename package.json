{
  "name": "tcg-pack-simulator",
  "version": "1.3.1",
  "description": "A Trading Card Game Pack Opening Simulator built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "clean": "rimraf dist",
    "force-clean": "rimraf dist && timeout 2",
    "prebuild": "npm run clean",
    "build": "electron-builder",
    "build-win": "npm run force-clean && electron-builder --win",
    "build-mac": "npm run force-clean && electron-builder --mac", 
    "build-linux": "npm run force-clean && electron-builder --linux",
    "build-safe": "npm run clean && timeout 3 && electron-builder",
    "dist": "npm run build"
  },
  "keywords": [
    "tcg",
    "trading cards",
    "pack simulator",
    "electron",
    "game"
  ],
  "author": "CardpackSim Developer",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "rimraf": "^5.0.0"
  },
  "build": {
    "appId": "com.cardpacksim.tcgpacksimulator",
    "productName": "TCG_Pack_Simulator",
    "publish": null,
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist",
      "!.git",
      "!*.md"
    ],
    "win": {
      "target": [

        {
          "target": "portable"
        }
      ],
      "artifactName": "${productName}.${ext}"
    },
    "linux": {
      "target": "AppImage",
      "artifactName": "${productName}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}